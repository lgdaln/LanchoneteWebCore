@model LanchoneteCore.Models.ViewModels.PedidoFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pedido.Atendente" />


            <div class="form-group">
                <label asp-for="Pedido.ProdutoID" class="control-label">Produto</label>
                <select asp-for="Pedido.ProdutoID" asp-items="@(new SelectList(Model.Produtos,"ProdutoID", "Nome"))" class="form-control"></select>
                

            <div class="form-group">
                <label asp-for="Pedido.ProdutoID" class="control-label">Produto</label>
                <select asp-for="Pedido.ProdutoID" asp-items="@(new SelectList(Model.Produtos,"ProdutoID","ValorUnitario"))" class="form-control"></select>
            </div>


            <div class="form-group">
                <label asp-for="Pedido.ValorAtual" class="control-label"></label>
                <input asp-for="Pedido.ValorAtual" class="form-control" />
                <span asp-validation-for="Pedido.ValorAtual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
